{
  "name": "code-security-analyzer",
  "displayName": "Code Security Analyzer",
  "description": "AI Security + Compliance Assistant - Real-time vulnerability detection with AI explanations",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-security-analyzer.scanFile",
        "title": "Scan for Security Vulnerabilities"
      },
      {
        "command": "code-security-analyzer.showDashboard",
        "title": "Show Security Dashboard"
      },
      {
        "command": "code-security-analyzer.exportReport",
        "title": "Export Security Report (HTML)"
      }
    ],
    "configuration": {
      "title": "Code Security Analyzer",
      "properties": {
        "codeSecurityAnalyzer.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for AI-powered explanations"
        },
        "codeSecurityAnalyzer.enableAI": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered explanations"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "openai": "^4.104.0"
  }
}
